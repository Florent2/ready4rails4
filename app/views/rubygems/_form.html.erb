<%= form_for @rubygem, class: "form-horizontal well" do |f| %>
  <fieldset>
    <% if @rubygem.errors.any? %>
      <div class="alert alert-error">
        <p>One or more errors prevented the gem to be saved:</p>
        <ul>
          <% @rubygem.errors.full_messages.each do |error| %>
            <li><%= error %>.</li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.text_field :miel %>

    <p class="alert alert-info">Register a new gem only if you know whether it is ready or not. Thanks :)</p>

    <div class="control-group">
      <%= f.label :name, class: "control-label" %>
      <div class="controls">
        <%= f.text_field :name, autofocus: true %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :status, class: "control-label" %>
      <div class="controls">
        <%= f.select :status, Rubygem::STATUSES %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :notes, class: "control-label" %>
      <div class="controls">
        <%= f.text_area :notes, placeholder: "Please indicate how you know it's ready or not: point to the Changelog, the README, issue(s), etc. You can use Markdown." %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit "Save changes", class: "btn btn-primary" %>
    </div>
  </fieldset>
<% end %>
