<%= form_tag :rubygems, method: :get, remote: true, class: "well form-search", id: "gems-search" do %>
  <%= text_field_tag :query, nil, placeholder: "Type the name of a gem", autofocus: true, autocomplete: "off", class: "input-medium search-query" %>
  <span style="padding-left: 10px; padding-right:10px">OR</span>
  <%= link_to "Upload a Gemfile", new_gemfile_check_path, class: "btn btn-primary" %>
  <%= link_to "Register new gem", new_rubygem_path, class: "btn btn-success pull-right" %>
<% end %>

<div id="pagination"><%= paginate @gems, remote: true %></div>
<%= render "shared/gems_table" %>
